<div class="row">
	<div class="well col-md-6 col-md-offset-3">
		<h1 class="center">Log In</h1>
		<%= form_tag '/login' do %>
			<%= label_tag :email %>
			<%= text_field_tag :email %><br>

			<%= label_tag :password %>
			<%= password_field_tag :password %> <br>

			<%= submit_tag 'Login', class: 'btn btn-success' %>

		<% end %>
	</div>	
</div>